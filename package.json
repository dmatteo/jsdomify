{
  "name": "jsdomify",
  "version": "1.1.0",
  "description": "Create a JSDom instance for browserless testing, exposing some handling methods",
  "main": "lib/jsdomify.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "jsdom": "7.2.2"
  },
  "devDependencies": {
    "babel-core": "6.4.5",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "coveralls": "2.11.6",
    "eslint": "1.10.3",
    "eslint-config-airbnb": "3.1.0",
    "eslint-plugin-react": "3.15.0",
    "isparta": "4.0.0",
    "istanbul": "0.4.2",
    "mocha": "2.3.4",
    "pre-commit": "1.1.2",
    "react": "0.14.6",
    "react-addons-test-utils": "0.14.6",
    "react-dom": "0.14.6",
    "unexpected": "10.6.0"
  },
  "scripts": {
    "compile": "babel src/ --out-dir lib/",
    "coverage": "babel-node node_modules/.bin/isparta cover --report cobertura --report html node_modules/.bin/_mocha --report lcovonly",
    "lint:all": "eslint src/",
    "lint:cached": "LIST=`git diff --cached --name-only | grep \\.js | grep -v json`; if [ \"$LIST\" ]; then eslint $LIST; fi",
    "prepublish": "npm run compile",
    "test": "mocha --compilers js:babel-core/register",
    "travis": "npm run lint:all && npm run coverage"
  },
  "pre-commit": [
    "lint:cached"
  ],
  "files": [
    "lib/jsdomify.js"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/podio/jsdomify.git"
  },
  "keywords": [
    "jsdom",
    "dom",
    "test",
    "html",
    "testing",
    "mocha"
  ],
  "author": "Domenico Matteo <matteo.domenico@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/podio/jsdomify/issues"
  },
  "homepage": "https://github.com/podio/jsdomify"
}
